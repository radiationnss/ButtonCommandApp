<Window x:Class="ButtonCommandApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonCommandApp"
        mc:Ignorable="d"
        Loaded="MainWindow_Load"
        Title="KeyboarCommand" Height="250" Width="400">
    <Grid Background="#FAD4D4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Background="#EF9F9F" Foreground="White" Name="btnStartRecording" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Content="start" Margin="25" Click="ButtonStuff"/>
        <Button Background="#EF9F9F" Foreground="White" Name="btnStopRecording" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Center" Content="stop" Margin="25" Click="ButtonStuff" IsEnabled="False"/>
    </Grid>
</Window>
